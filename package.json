{
  "name": "minerva",
  "version": "0.2.0",
  "description": "Local LLM server with OpenAI-compatible API",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check:frontend": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "tauri": "tauri",
    "test": "pnpm test:backend",
    "test:backend": "cd src-tauri && cargo test --lib && cargo test --test '*' && cd ..",
    "test:backend:watch": "cd src-tauri && cargo test --lib -- --nocapture && cd ..",
    "test:backend:unit": "cd src-tauri && cargo test --lib && cd ..",
    "test:backend:integration": "cd src-tauri && cargo test --test '*' && cd ..",
    "test:all": "pnpm test:backend",
    "lint": "pnpm lint:backend && pnpm lint:frontend && pnpm lint:standards",
    "lint:backend": "cd src-tauri && cargo clippy --all-targets --all-features -- -D warnings && cd ..",
    "lint:standards": "bash scripts/check-all-standards.sh",
    "lint:backend:fix": "cd src-tauri && cargo clippy --all-targets --all-features --fix && cd ..",
    "lint:frontend": "pnpm check:frontend",
    "lint:frontend:fix": "pnpm fmt:frontend",
    "fmt": "pnpm fmt:backend && pnpm fmt:frontend",
    "fmt:backend": "cd src-tauri && cargo fmt && cd ..",
    "fmt:backend:check": "cd src-tauri && cargo fmt -- --check && cd ..",
    "fmt:frontend": "prettier --write 'src/**/*.{svelte,ts,tsx,js,json}'",
    "fmt:frontend:check": "prettier --check 'src/**/*.{svelte,ts,tsx,js,json}'",
    "fmt:all": "pnpm fmt:backend && pnpm fmt:frontend",
    "fmt:check": "pnpm fmt:backend:check && pnpm fmt:frontend:check",
    "check:all": "pnpm check:frontend && pnpm lint:backend && pnpm fmt:backend:check",
    "check:backend": "cd src-tauri && cargo check && cd ..",
    "build:backend": "cd src-tauri && cargo build && cd ..",
    "build:backend:release": "cd src-tauri && cargo build --release && cd .."
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
